<%= form_for @quiz, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :question, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ans1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ans1, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ans2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ans2, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ans3, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ans3, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ans4, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ans4, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correct, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :correct, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quizzes_path, :class => 'btn' %>
  </div>
<% end %>
